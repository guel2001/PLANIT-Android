<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="회원정보"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/gotham"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView

                android:layout_width="200dp"
                android:layout_height="200dp"

                app:cardCornerRadius="100dp">


                <ImageView
                    android:id="@+id/profileimageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/nameEditText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:fontFamily="@font/gotham"/>

            <EditText
                android:id="@+id/phoneNumberEditText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="핸드폰 번호"
                android:inputType="phone"
                android:fontFamily="@font/gotham"/>

            <EditText
                android:id="@+id/edit_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="주소 : ex) 경기도 수원시 영통구 광교산로 154-42"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/checkButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인"
                android:backgroundTint="@color/black"

                android:fontFamily="@font/gotham"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonsCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:elevation="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/gallery2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="갤러리" />

            <Button
                android:id="@+id/picture2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진촬영" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>